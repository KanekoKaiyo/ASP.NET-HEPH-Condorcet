@model TeacherParadise.Models.CCoursRemediation
@{
    ViewData["Title"] = "Création d'une nouvelle séance de cours de remediation";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="CoursRemediationAdded">
    <table>
        <tr>
            <td>
                <label asp-for="Date"></label>
            </td>
            <td>
                <input asp-for="Date" />
            </td>
            <td>
                <span asp-validation-for="Date" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="StartHour"></label>
            </td>
            <td>
                <input asp-for="StartHour" />
            </td>
            <td>
                <span asp-validation-for="StartHour" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="EndHour"></label>
            </td>
            <td>
                <input asp-for="EndHour" />
            </td>
            <td>
                <span asp-validation-for="EndHour" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <a asp-action="Index"> Retour </a>
            </td>
            <td colspan="2">
                <input type="submit" />
            </td>
        </tr>
    </table>

</form>