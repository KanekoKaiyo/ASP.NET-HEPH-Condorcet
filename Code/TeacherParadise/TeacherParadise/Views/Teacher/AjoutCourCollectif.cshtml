@model TeacherParadise.Models.CCoursCollectif
@{
    ViewData["Title"] = "Création d'une nouvelle séance de cours collectif";
}

<h1>@ViewData["Title"]</h1>

@{ 
    if((bool)TempData["Error"] == true) {
        <label class="alert-danger"> Une erreur est survenue, il est possible que la date et l'heure ne sois pas disponnible ou que la date du cours corresponde avec un jour de congé, recommencer en changeant les dates. </label>
    }
}

<form asp-action="AjoutCourCollectif">
    <table>
        <tr>
            <td>
                <label asp-for="Titre"></label>
            </td>
            <td>
                <input asp-for="Titre" />
            </td>
            <td>
                <span asp-validation-for="Titre" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Description"></label>
            </td>
            <td>
                <input asp-for="Description" />
            </td>
            <td>
                <span asp-validation-for="Description" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Matieres"></label>
            </td>
            <td>
                <input asp-for="Matieres" />
            </td>
            <td>
                <span asp-validation-for="Matieres" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Niveau"></label>
            </td>
            <td>
                <input asp-for="Niveau" />
            </td>
            <td>
                <span asp-validation-for="Niveau" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Date"></label>
            </td>
            <td>
                <input asp-for="Date" />
            </td>
            <td>
                <span asp-validation-for="Date" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="StartHour"></label>
            </td>
            <td>
                <input asp-for="StartHour" />
            </td>
            <td>
                <span asp-validation-for="StartHour" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Price"></label>
            </td>
            <td>
                <input asp-for="Price" />
            </td>
            <td>
                <span asp-validation-for="Price" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="MaxStudent"></label>
            </td>
            <td>
                <input asp-for="MaxStudent" />
            </td>
            <td>
                <span asp-validation-for="MaxStudent" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <a asp-action="ListCourCollectif"> Retour </a>
            </td>
            <td colspan="2">
                <input type="submit" />
            </td>
        </tr>
    </table>

</form>